{
  "title": "Caps Lock to Control (Shift+Caps Lock for original)",
  "rules": [
    {
      "description": "Change Caps Lock to Left Control. Use Shift + Caps Lock to toggle Caps Lock.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "mandatory": [
                "shift"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    }
  ]
}

